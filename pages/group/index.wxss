page {
  background: #f6f6f6;
}

.swiper-item {
  border-radius: 20rpx;
  min-height: 240rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 15rpx 0 15rpx;
  flex-flow: wrap;
  color: #999;
  font-size: 20rpx;
  line-height: 1;
}

.swiper-con {
  padding-left: 38rpx;
  padding-right: 34rpx;
  padding-bottom: 12rpx;
  background: #fff;
  width: 100%;
  border-radius: 10rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.swiper-con .swiper-con-top {
  display: flex;
  justify-content: space-between;
  padding-top: 44rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx dashed #d7d7d7;
}

.swiper-con .swiper-con-top .right .title {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.swiper-con .swiper-con-top .right .time {
  font-size: 24rpx;
  margin-top: 33rpx;
}

.swiper-con .swiper-con-top .left {
  font-size: 69rpx;
  color: #f42e8f;
  font-weight: bold;
  margin-top: 15rpx;
}

.swiper-con .swiper-con-top .left_1 {
  color: #c5c5ca;
}

.swiper-con .swiper-con-top .left text {
  font-size: 30rpx;
}

.swiper-con .swiper-con-bottom {
  display: flex;
  margin-top: 13rpx;
  justify-content: space-between;
  line-height: 1;
}

.swiper-con .swiper-con-bottom .right {
  display: flex;
}

.swiper-con .swiper-con-bottom .left .btn {
  width: 150rpx;
  height: 55rpx;
  line-height: 53rpx;
  text-align: center;
  background: linear-gradient(180deg, rgba(244, 46, 143, 1) 0%, rgba(255, 94, 173, 1) 100%);
  border-radius: 27rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  margin-left: 15rpx;}

.swiper-con .swiper-con-bottom .left .btn_1 {
  background: #c5c5ca;
}

.swiper-con .swiper-con-top .right {
  width: 518rpx;
}
/* 横幅 */

.height_view {
  height: 230rpx;
  width: 100%;
}

.groupBanner {
  background: #f6f6f6;
  position: fixed;
  bottom: 0;
  width: 690rpx;
  height: 200rpx;
  padding: 0 30rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
}
.groupBanner image {
 border-radius:10rpx;
}
