.personal_header {
  /* margin: 0 20rpx; */
  height: auto;
  background: #fff;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
}

.content-top {
  position: relative;
  border-radius: 10rpx;
  padding: 67rpx 40rpx 39rpx 40rpx;
  display: flex;
  align-items: center;
}

.content-top_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.content-top .info_avatar {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
}

.content-top .info_avatar {
  position: relative;
  /* background: rgba(0, 0, 0, 1); *//* border: 1rpx solid rgba(141, 149, 158, 1); */
}

.content-top .info_avatar_decorate {
left:-24rpx;
position:absolute;
top:-24rpx;
width:164rpx;
z-index:0;

           
}

.content-top .info_avatar_logo {
  width: 114rpx;
  position: relative;
  height: 114rpx;
  border-radius: 50%;
  overflow: hidden;
}

.content-top .info_name {
  color: #101010;
  margin-left: 34rpx;
  position: relative;
}

/* 个人中心所有列表 */

.personal_panel .item {
  height: 100rpx;
}

.personal_panel .item.item-divder {
border-bottom: 15rpx solid #FAFAFA;
}
.personal_panel .item.item-divder .item-border {
  height: 0rpx;

}

.personal_panel .item .item-link {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
}

.personal_panel .item .item-border {
  height: 1rpx;
  margin-left: 86rpx;
  background: #E3E3E3
}

.personal_panel .item:last-child .item-border {
  height: 0rpx;
  margin-left: 86rpx;
  background: #E3E3E3
}
.personal_panel .item .item_right_logo {
  display: flex;
  align-items: center;
}

.personal_panel .item .item_right_logo image {
  width: 36rpx;
  padding-right: 22rpx;
}

.personal_panel .item .item_left_logo {
  width: 17rpx;
}
