@import '/public.wxss';

page{
 background:#F5F5F5;
}
.container{
    background:#F5F5F5;
    height: 100%;
  box-sizing:border-box;
  /* padding-top: 100rpx; */
}
.cate-nav{
    position: fixed;
    left:0;
    top:0; 
     z-index: 1000;
    width: 100%;
    background: #fff;
}

.cate-nav-body{
   border-top: 1px solid #f5f5f5;
    height:45px;
    box-sizing: border-box;
    white-space: nowrap;   
    background: #fff;
    overflow: hidden;
}

.cate-nav .item{
    display: inline-block;
    height:45px;
    text-align: center;
    min-width: 130rpx;
    padding: 0 15rpx;
}

.cate-nav .item .name{
    display: block;
    height:45px;
    margin: 0 20rpx;
    line-height:45px;


    color: #333;    box-sizing: border-box;

    font-size: 30rpx;
    width: auto;
      
}
.cate-nav .item.active .name{
    position: relative;
    color: rgba(249,45,144,1);
    width: auto;
    border-bottom: 4rpx solid rgba(249,45,144,1);
}
.cate-item{

    height: auto;
    overflow: hidden;
background: #F5F5F5;
}
