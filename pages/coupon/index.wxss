.swiper .swiper-scroll-list {
  top: 0;background: #fff;
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 30px;
  line-height: 15px;
  white-space: nowrap;
}

.swiper .swiper-scroll-list .swiper-scroll-item {
  width: 50%;
  display: inline-block;
  font-size: 30rpx;
  color: #000;
  text-align: center;
}

.swiper .swiper-scroll-list .active {
  color: #f92d90;
}
.swiper .swiper-swiper {
  width: 100%;
}

.swiper .swiper-swiper .swiper-swiper-item .swiper-item {
  border-radius:20rpx;
  min-height: 240rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 15rpx;
  flex-flow: wrap;
 
color: #999999;
font-size: 20rpx;
  line-height: 1;
}
.swiper-con {
  padding-left: 38rpx;
  padding-right: 34rpx;
  padding-bottom: 12rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.swiper-con .swiper-con-top {
 display:flex;
justify-content:space-between;
padding-top:36rpx;
padding-bottom:36rpx;
border-bottom:1rpx dashed #d7d7d7;

}

.swiper-con .swiper-con-top .right .title {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.swiper-con .swiper-con-top .right .time {
  font-size: 24rpx;
  margin-top: 33rpx;
}

.swiper-con .swiper-con-top .left {
  font-size: 69rpx;
  color: #f42e8f;
  font-weight: bold;
  margin-top: 15rpx;
}

.swiper-con .swiper-con-top .left_1 {
  color:#c5c5ca;
display:flex;
align-items:center;

}

.swiper-con .swiper-con-top .left text {
  font-size: 30rpx;margin-top:24rpx;

}

.swiper-con .swiper-con-bottom {
  display: flex;
  margin-top: 13rpx;
  justify-content: space-between;
  line-height: 1;
}

.swiper-con .swiper-con-bottom .right {
  display: flex;align-items: center;
}

.swiper-con .swiper-con-bottom .left .btn {
  width: 150rpx;
  height: 55rpx;
  line-height: 53rpx;
  text-align: center;
  background: linear-gradient(180deg, rgba(244, 46, 143, 1) 0%, rgba(255, 94, 173, 1) 100%);
  border-radius: 27rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  margin-left: 15rpx;}

.swiper-con .swiper-con-bottom .left .btn_1 {
  background: #c5c5ca;
}

