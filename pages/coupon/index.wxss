.swiper .swiper-scroll-list {
  top: 0;background: #fff;
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 30px;
  line-height: 15px;
  white-space: nowrap;
}

.swiper .swiper-scroll-list .swiper-scroll-item {
  width: 50%;
  display: inline-block;
  font-size: 30rpx;
  color: #000;
  text-align: center;
}

.swiper .swiper-scroll-list .active {
  color: #f92d90;
}
.swiper .swiper-swiper {
  width: 100%;
}

.swiper .swiper-swiper .swiper-swiper-item .swiper-item {
  border-radius:20rpx;
  min-height: 240rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 15rpx;
  flex-flow: wrap;
 
color: #999999;
font-size: 20rpx;
  line-height: 1;
}

.swiper-con {
   padding-left:38rpx;
    padding-right:34rpx;
