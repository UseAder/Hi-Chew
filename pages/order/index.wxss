.swiper .swiper-scroll-list {
  top: 0;background: #fff;
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 40px;
  line-height: 15px;border-top: 1rpx solid #E7E7E7;
  white-space: nowrap;
padding-bottom:8px;

}

.swiper .swiper-scroll-list .swiper-scroll-item {
  width: 50%;
  display: inline-block;border-top: 1rpx solid #E7E7E7;
  font-size: 30rpx;  height: 26px;padding-top:15px;


  color: #000;
  text-align: center;
}
 .scroll-item-line {
width:32rpx;
height:4rpx;
background:rgba(255,59,153,1);
  border-radius: 2px;
  margin: 8px auto;
}
.swiper .swiper-scroll-list .active {
  color: #f92d90;
}
.swiper .swiper-swiper {
  width: 100%;
}

.swiper .swiper-swiper .swiper-swiper-item .swiper-item {
  border-radius:20rpx;
  min-height: 240rpx;
  display: flex;
  padding-bottom: 117rpx;
  justify-content: space-between;
  margin: 0 auto;
  flex-flow: wrap;
 
color: #999999;
font-size: 20rpx;
  line-height: 1;
}

