@import '/app.wxss';
@import "../../pages/template-quantity/template-quantity.wxss";

.product-window {
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  background-color: #fff;
  z-index: 10;
  border-radius: 4rpx 4rpx 0 0;
  padding-bottom: 140rpx;
  transform: translate3d(0, 100%, 0);
  transition: all 0.3s cubic-bezier(0.25, 0.5, 0.5, 0.9);
}

.product-window.on {
  transform: translate3d(0, 0, 0);
}

.product-window .textpic {
  padding: 30rpx 130rpx 0 46rpx;
  position: relative;
  height: 146rpx;
  margin-bottom: 35rpx;
}

.product-window .textpic .pictrue {
  width: 146rpx;
  height: 146rpx;
}

.product-window .textpic .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.product-window .textpic .text {
  width: 410rpx;
  font-size: 32rpx;box-sizing: border-box;margin-top: 20rpx;
  color: #202020;
  display: flex;flex-direction: column;  height: 100%;justify-content: space-between;
}

.product-window .textpic .text .money {
  font-size: 24rpx;
}

.product-window .textpic .text .money .num {
  font-size: 40rpx;
  color: #f92d90;
  font-weight: bold;
  margin: 10rpx 0;
}

.product-window .textpic .text .money .num text {
  font-weight: initial;
  font-size: 24rpx;
  text-decoration: line-through;
  color: #999;
  margin-top: -8rpx;
}

.product-window .textpic .clone_img {
  position: absolute;
  right: 25rpx;
  top: 38rpx;
  font-size: 44rpx;
  width: 32rpx;
  height: 32rpx;
  color: #8a8a8a;
}

.product-window .productWinList {
  max-height: 395rpx;
  overflow: auto;
  margin-left: 50rpx;
}

.product-window .productWinList .item~.item {
  margin-top: 36rpx;
}

.product-window .productWinList .item .title {
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.product-window .productWinList .item .listn {
  padding: 0 30rpx 0 0;
}

.product-window .productWinList .item .listn .itemn {
  box-sizing: border-box;
  display: inline-block;
  border-radius: 4rpx;
  height: 60rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 25rpx;
  border: 1rpx solid #ddd;
  font-size: 24rpx;
  color: #333;
}

.product-window .productWinList .item .listn .itemn.on {
  color: #fff;
  background-color: #f92d90;
  border-color: #f92d90;
}

.product-window .cart {
  margin-top: 36rpx;
  margin-left: 50rpx;
}

.product-window .cart .title {
  font-size: 30rpx;
  color: #333;
  margin: 22rpx 0;
}

