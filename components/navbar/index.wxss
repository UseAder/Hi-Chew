color:#000;box-sizing: border-box;
z-index:2;
align-items:center;
padding-top:19px;

}
.nav-wrap .logo{
 width:19rpx; height: 41px;align-items: center;display: flex;padding-left: 30rpx;padding-right:23rpx;
}
