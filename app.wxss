}
page {
  font-size: 28rpx;
}
page::after{
    content: '';
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1rpx;
    background-color: #F1F1F1;
    box-shadow:0px 0px 1rpx 0px rgba(98,98,98,0.2);
    z-index: 9999;
}
